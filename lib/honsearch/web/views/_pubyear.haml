- if params["pubage"] || params["pubyear"]
  %h4 発行年
  - grouping_by_pubyear(@books).each do |pubyear|
    = link_to("#{pubyear._key}年 (#{pubyear.n_sub_records})", url(["/search", drilled_params(pubyear: pubyear._key)].join("?")))
    %br
- else
  %h4 発行年代
  - grouping_by_pubage(@books).each do |pubage|
    = link_to("#{pubage._key}年代 (#{pubage.n_sub_records})", url(["/search", drilled_params(pubage: pubage._key)].join("?")))
    %br
